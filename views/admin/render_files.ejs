<style type="text/css">
	.pdf_item{
		padding: 10px;
		align-content: center; 
	}
	.pdf_item:hover{
		background-color: rgb(200,200,200);
		cursor: pointer;
	}
</style>
<div class="row" style="margin-top: 10px">
	<div class="col-md-2" style="display: flex;">
	<%for(var i=0; i<data.length; i++){%>
			<div class="pdf_item" data-in="<%=i%>">
				<img src="/assets/pdf_icon.png" style="width: 70px;">
				<h6><%=data[i].nombre%></h6>
				<form id="form_<%=i%>" method="get" action="/pdf_file/<%=data[i].nombre%>" target="_blank"></form>
			</div>
	<%}%>
	</div>
</div>

	<script type="text/javascript">
		var width = $('.pdf_item').width();
		var margin_left = (width-70)/2;
		$(".pdf_item img").css("margin-left", margin_left+"px");
		$(".pdf_item img").css("margin-right", margin_left+"px");
		$(".pdf_item").on('click', function(e){
			e.preventDefault();
			var indice = $(this).data('in');
			$("#form_"+indice).submit();
		});
	</script>